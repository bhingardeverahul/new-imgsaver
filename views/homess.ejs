  <%-include('partials/navbar');%>
  <body>
    <div class="col-lg-12">
      <% if(message) {%>
      <div
        class="alert alert-dismissible fade show alert-<%=message.type %>"
        role="alert"
      >
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
        <strong><%=message.message%></strong>
      </div>
      <%} %> <% if(users !=" ") {%>

      <table class="table table-dark text-center table-striped my-4">
        <thead>
          <tr>
            <th scope="col">ID</th>
            <th scope="col">Image</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Action</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach((row,Index)=>{%>
          <tr>
            <td><%= Index %></td>
            <td>
              <img
                src="uploads/<%=row.image%>"
                width="35px"
                class="img-thumbnail"
              />
            </td>
            <td><%= row.name %></td>
            <td><%= row.email %></td>
            <td><%= row.phone %></td>
            <td>
              <a href="/api/edit/<%=row._id%>" class="text-success"
                ><i class="fas fa-edit fa-lg mx-1"></i
              ></a>
            </td>
            <td>
              <a href="/api/delete/<%= row._id %>" class="text-danger"
                ><i class="fas fa-trash fa-lg"></i
              ></a>
            </td>
          </tr>
          <%})%>
        </tbody>
      </table>
      <%}else {%>
      <h1 class="text-center text-secondary mt-5">User not Found</h1>
      <%}%>
    </div>
    <div>
      <script>
        $(document).ready(function () {
          $("table").DataTable({
            order: [1, "desc"],
          });
        });
      </script>
    </div>
  </body>
